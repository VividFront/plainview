{
  "name": "plainview",
  "version": "1.0.0",
  "description": "[![Build status](https://github.com/shopify/dawn/actions/workflows/ci.yml/badge.svg?branch=main)](https://github.com/Shopify/dawn/actions/workflows/ci.yml?query=branch%3Amain) [![PRs Welcome](https://img.shields.io/badge/PRs-welcome-brightgreen.svg?color=informational)](/.github/CONTRIBUTING.md)",
  "main": "index.js",
  "config": {
    "port": "3000",
    "store": "your-shopify-store-name"
  },
  "scripts": {
    "build": "webpack",
    "dev": "concurrently \"npm:webpack:watch\" \"npm:shopify:serve\"",
    "watch": "npm run dev",
    "prepare": "husky install",
    "switch": "npm run shopify:switch",
    "lint": "eslint --fix --cache --cache-location \"node_modules/.eslintcache\" src/**/*.{js,mjs,cjs} && npm run format && shopify theme check -a",
    "format": "prettier --write src/**/*",
    "webpack:watch": "webpack watch --no-stats",
    "webpack:build": "webpack --mode production",
    "shopify:switch": "cross-var shopify auth logout && shopify theme list -s $npm_package_config_store",
    "shopify:serve": "cross-var shopify theme dev --port $npm_package_config_port"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:VividFront/plainview.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/VividFront/plainview"
  },
  "type": "module",
  "homepage": "https://github.com/VividFront/plainview#readme",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 11"
  ],
  "devDependencies": {
    "@shopify/cli": "^3.49.7",
    "@shopify/theme": "^3.49.7",
    "@swc/core": "^1.3.93",
    "@tailwindcss/line-clamp": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "cross-var": "^1.1.0",
    "css-loader": "^6.8.1",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": ">=8.0.3",
    "lint-staged": ">=15.0.1",
    "mini-css-extract-plugin": "^2.7.6",
    "path": "^0.12.7",
    "postcss": "^8.4.31",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.2.0",
    "prettier": "^3.0.3",
    "progress-bar-webpack-plugin": "^2.1.0",
    "sass": "^1.69.4",
    "swc-loader": "^0.2.3",
    "tailwindcss": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-messages": "^2.0.4"
  },
  "dependencies": {
    "@lottiefiles/lottie-player": "^2.0.2",
    "@shopify/shopify-api": "^8.0.1",
    "@shopify/theme-a11y": "^4.1.1",
    "@shopify/theme-addresses": "^4.1.1",
    "@shopify/theme-cart": "^4.1.1",
    "@shopify/theme-currency": "^4.1.1",
    "@shopify/theme-images": "^4.1.1",
    "@shopify/theme-predictive-search": "^4.1.1",
    "@shopify/theme-product": "^4.1.1",
    "@shopify/theme-product-form": "^4.1.1",
    "@shopify/theme-rte": "^4.1.1",
    "@shopify/theme-sections": "^4.1.1",
    "@splidejs/splide": "^4.1.4",
    "es6-promise": "^4.2.8",
    "jquery": "^3.7.1",
    "postcss-import": "^15.1.0",
    "sass-loader": "^13.3.2",
    "unfetch": "^5.0.0"
  },
  "lint-staged": {
    "*.{js,cjs,mjs}": "eslint --fix --cache --cache-location \"node_modules/.eslintcache\"",
    "*.{js,css,scss,sass,mjs,cjs,md,json,jsonc}": "prettier --write"
  }
}
